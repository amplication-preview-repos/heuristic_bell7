datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Waypoint {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  latitude  Float?
  longitude Float?
  route     Route?   @relation(fields: [routeId], references: [id])
  routeId   String?
}

model Route {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  startedAt DateTime?
  endedAt   DateTime?
  user      User?      @relation(fields: [userId], references: [id])
  userId    String?
  waypoints Waypoint[]
}

model MapObject {
  id        String                  @id @default(cuid())
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
  typeField EnumMapObjectTypeField?
  latitude  Float?
  name      String?
  longitude Float?
  radius    Float?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
  fullName  String?
  routes    Route[]
}

enum EnumMapObjectTypeField {
  Option1
}
